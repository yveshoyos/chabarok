<?xml version="1.0"?>
<odoo>

    <record id="view_event_event_form" model="ir.ui.view">
        <field name="name">event.event.theater.form</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <field name="address_id" position="after">
                <field name="theater_id"/>
            </field>
            <field name="date_tz" position="after">
                <field name="previous_event_id"/>
            </field>
            <xpath expr="//button[@name='toggle_active']" position="before">
                <button name="open_website_seating_url"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-ticket"
                        attrs="{'invisible': [('theater_id', '=', False)]}">
                    Seating
                </button>
            </xpath>
            <xpath expr="//field[@name='state']" position="before">
                <button name="automatically_compute_seats"
                        type="object"
                        string="Compute seating"
                        attrs="{'invisible': [('theater_id', '=', False)]}"/>
                <button name="reset_all_seats"
                        type="object"
                        string="Reset seating"
                        attrs="{'invisible': [('theater_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>


    <record id="view_event_registration_seats_tree" model="ir.ui.view">
        <field name="name">event.registration.seats.tree</field>
        <field name="model">event.registration</field>
        <field name="inherit_id" ref="event_registration_multi_qty.view_event_registration_tree"/>
        <field name="arch" type="xml">
            <field name="qty" position="after">
                <field name="sequence" widget="handle"/>
                <field name="sequence_txt"/>
                <field name="seats_txt"/>
                <field name="previous_seats_txt"/>
                <field name="previous_seat_ids" invisible="1"/>
                <button name="copy_seats"
                        type="object"
                        string="Copy"
                        attrs="{'invisible': [('previous_seat_ids', '=', False)]}"/>
            </field>
        </field>
    </record>

    <record id="view_event_registration_seats_form" model="ir.ui.view">
        <field name="name">event.registration.seats.form</field>
        <field name="model">event.registration</field>
        <field name="inherit_id" ref="event.view_event_registration_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <group>
                        <field name="seats_txt"/>
                        <field name="previous_seats_txt"/>
                        <field name="previous_seat_ids" invisible="1"/>
                    </group>
                    <group>
                        <field name="previous_registration_id"/>
                        <button name="copy_seats"
                            type="object"
                            string="Copy seats"
                            attrs="{'invisible': [('previous_seat_ids', '=', False)]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
